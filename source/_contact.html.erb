<div id='contact' class="contact-wrapper" >
  <div class="contact-photo"></div>
  <div class="contact-container d-flex align-items-center">
    <div class="contact-form">
      <h1>CONTACT US</h1>
      <p>Have questions or want to get in touch with us? </p>
      <form action="https://formspree.io/lucas.cheung@arrowglobal.io" method="POST" />
        <div class="form-group d-block">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control form-control-lg">
        </div>
        <div class="form-group">
          <label for="email" >Email</label>
          <input type="email" name="email" class="form-control form-control-lg">
        </div>
        <div class="form-group">
          <label for="company">Company (Optional)</label>
          <input type="text" name="company" class="form-control form-control-lg">
        </div>
        <div class="form-group">
          <label for="phone">Contact Number (Optional)</label>
          <input type="text" name="phone" class="form-control form-control-lg">
        </div>
        <div class="form-group">
          <label for="">Your Message</label>
          <textarea name="message" placeholder="Tell us about your business." class="form-control form-control-lg"></textarea>
        </div>
        <input type="submit" value="Send">
      </form>
    </div>
  </div>
</div>
